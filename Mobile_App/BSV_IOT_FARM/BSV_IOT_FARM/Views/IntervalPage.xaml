<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSV_IOT_FARM.Views.IntervalPage"
             Title="Telemetry Interval">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label Text="Enter Telemetry Interval in Seconds"/>
            <Entry Text="{Binding SelectedContainerFarm.TelemetryInterval}"  Placeholder="ex. 10" Keyboard="Numeric"/>
            <Button x:Name="btn" Text="Save" Command="{Binding ModifyTelemetryCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>